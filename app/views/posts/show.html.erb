<div class="row">
	<div class="col-md-7">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h1><%= @post.title %></h1>
			</div>
			<div class="panel-body">
				<p><b>Date:</b> <%= l @post.created_at, format: :short %></p>
				<p><%= @post.body.html_safe %></p>
				<%= link_to 'Back', posts_path, :class => 'btn btn-primary'%>
			</div>
		</div>
	</div>
	<div class="col-md-5">
		<div class="panel panel-default">
			<div class="panel-body">
				<%= render 'thread' %>
			</div>
		</div>
	</div>
</div>
