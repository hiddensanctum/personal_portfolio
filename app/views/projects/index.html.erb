<div class="page-header" id="fade">
	<h1>Projects</h1>
</div>
<div class="row">
	<div class="col-md-12">
	<% @projects.reverse_each do |project| %>
		<div class="well col-md-6">
			<h3><%= project.title %></h3>
			<p><b>Technology</b>:</p>
			<p><%= project.technologies_used %></p>
			<p><b>Description</b>:</p>
			<p><%= project.description %></p>
		</div>
	<% end %>
	</div>
</div>
<% if current_user.present? %>
	<%= link_to 'New Project', new_project_path, :class => 'btn btn-primary'%>
<% end %>

