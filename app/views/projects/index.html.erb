<div class="page-header fadeIn">
	<h1>Projects</h1>
</div>
<% @projects.reverse_each do |project| %>
<div class="well row fadeAdd">
		<div class="col-md-7">
			<%= image_tag project.image_url.to_s, :class => 'img-responsive' %>
		</div>
		<div class="col-md-5">
			<h3><%= link_to project.title, "http://#{project.url}" %></h3>

			<b>Technology</b>:
			<p><%= project.technologies_used %></p>
			<b>Description</b>:
			<p><%= project.description %></p>
			<p><%= link_to image_tag("github.png"), "http://#{project.github}" %></p>
			<% if current_user.present? %>
				<%= link_to 'Edit', edit_project_path(project), :class => 'btn btn-primary'%>
				<%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'%>
			<% end %>
		</div>
	</div>
	<% end %>
<% if current_user.present? %>
	<%= link_to 'New Project', new_project_path, :class => 'btn btn-primary'%>
<% end %>

