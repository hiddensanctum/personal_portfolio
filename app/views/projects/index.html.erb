<div class="row">
	<div class="medium-2 large-2 column text-right">
		<h3>Projects</h3>
	</div>
	<div class="medium-10 large-10 column">
		<ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-3 text-center">
			<% @projects.reverse_each do |project| %>
				<li>
					<a href="#" class="th" data-reveal-id="<%= project.id %>">
						<%= image_tag project.image_url.to_s %>
						<h6><%= project.title %></h6>
					</a>
				</li>

				<!-- Modal for Each Deal -->
				<div id="<%= project.id %>" class="reveal-modal" data-reveal>
					<div class="large-4 column">
						<h2><%= link_to project.title, "http://#{project.url}" %></h2>
						<h5>Technology:</h5>
						<p><%= project.technologies_used %></p>
						<h5>Description:</h5>
						<p><%= project.description %></p>
						<p><%= link_to image_tag("github.png"), "http://#{project.github}" %></p>
						<% if current_user.present? %>
							<%= link_to 'Edit', edit_project_path(project), :class => 'button'%>
							<%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button alert'%>
						<% end %>
					</div>
					<div class="large-8 column">
						<%= image_tag project.image_url.to_s, :class => 'img-responsive' %>
					</div>
				  <a class="close-reveal-modal">&#215;</a>
				</div>
			<% end %>
		</ul>
	</div>
</div>
<% if current_user.present? %>
	<%= link_to 'New Project', new_project_path, :class => 'button'%>
<% end %>
