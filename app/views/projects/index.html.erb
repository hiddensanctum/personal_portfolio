<div class="medium-12 large-12 columns">
  <div class="text-right">
    <% if current_user.present? %>
      <h6><%= link_to image_tag("new.png") + "New Project", new_post_path %></h6>
    <% end %>
  </div>
  <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3 text-center">
    <% @projects.each do |project| %>
      <li>
        <a class="fancybox" rel="group" href='<%= "#" + project.id.to_s %>'>
          <%= image_tag(project.image_url(:thumb).to_s, class:"img-responsive img-website") %>
        <h3><%= project.title %></h3>
        </a>
        <% if current_user.present? %>
          <%= link_to image_tag("edit.png"), edit_project_path(project) %>
          <%= link_to image_tag("delete.png"), project, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        <div id="<%= project.id %>" class="hide">
          <div class="medium-10 large-6 medium-centered large-uncentered columns">
            <%= image_tag(project.image_url(:thumb).to_s, class:"img-responsive img-website") %>
          </div>
          <div class="large-6 columns">
            <h3><%= project.title %></h3>
            <h3><small>Description:</small></h3>
            <p><%= project.description %></p>
            <h3><small>Technology:</small></h3>
            <p><%= render 'tech', :techlist => project.technologies_used %></p>
            <h3><small>Links:</small></h3>
            <ul class="inline-list text-center">
              <li><%= link_to image_tag("website.png"), "http://#{project.url}" %>Website</li>
              <li><%= link_to image_tag("github.png"), "http://#{project.github}" %>Github</li>
            </ul>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="pagination-centered">
    <%= foundation_paginate @posts %>
  </div>
</div>
